<select id="select" parameterType="UserDTO" resultType="UserDTO">
	SELECT *
 	FROM B_USER
 	WHERE U_ID=#{u_id} 
</select>

<select id="selectId" parameterType="String" resultType="UserDTO">
	SELECT *
 	FROM B_USER
 	WHERE U_ID=#{u_id} 
</select>

<insert id="insertUser">
	INSERT INTO B_USER(U_NUM,U_ID,U_PASS,U_EMAIL,U_PHONE,U_BIRTH,U_NICK,U_GENDER,U_ADDRESS,U_POST,U_NAME,QUESTION,ANSWER)
	VALUES (U_NUM.nextval,#{u_id},#{u_pass},#{u_email},#{u_phone},#{u_birth},#{u_nick},#{u_gender},#{u_address},#{u_post},#{u_name},#{question},#{answer})
	
</insert>

<delete id="deleteUser">
	DELETE B_USER WHERE U_NUM = #{u_num}

</delete>

<update id="updateAll">
	UPDATE B_USER 
	SET NICK = #{nick}, ADDRESS = #{address}, POST = #{post} ,QUESTION =#{question}, ANSWER = #{answer}
	WHERE U_ID = #{u_id}
</update>

<update id="updatePass">
 UPDATE B_USER
 SET U_PASS = #{u_pass}
 WHERE U_ID = #{u_id}
</update>

<update id="updateEmail">
	UPDATE B_USER
	SET EMAIL = #{email}
	WHERE U_ID = #{u_id}
</update>

<update id="updatePhone">
	UPDATE B_USER
	SET PHONE = #{phone}
	WHERE U_ID = #{u_id}
</update>

<!-- Admin 관리 페이지
-->


<select resultType="UserDTO" id="selectAll">
	SELECT *
	FROM b_user
	<include refid="sort" />
</select>
<sql id ="sort">
<if test="sort ==''">
ORDER BY U_DATE DESC
</if>
<if test="sort == 'u_date'">
ORDER BY U_DATE ASC
</if>

<if test="sort =='u_birth'">
ORDER BY U_BIRTH DESC
</if>
<if test="sort =='u_num'">
ORDER BY U_NUM DESC
</if>
</sql>


<!-- 로그인 페이지 -->
<!-- 총 게시글 갯수 출력 -->
<select id="countUser22" resultType="int">
	SELECT COUNT(*) FROM b_user
</select>

<!-- 페이징 처리 후 게시글 조회 -->
<select id="selectUser22" resultType="UserDTO">
	SELECT * 
		FROM (
			SELECT ROWNUM RN, A.* 
				FROM (
						SELECT * 
						FROM b_user 
						ORDER BY u_num DESC 
						) A
				)
	WHERE RN BETWEEN #{start} AND #{end}
</select>



<select resultType="int" id="check" >
	SELECT COUNT(*)
	FROM b_user
	WHERE U_ID=#{u_id}
 </select>

<select resultType="int" id="checknaver" >
	SELECT COUNT(*)
	FROM b_user
	WHERE U_EMAIL=#{u_email}
 </select>

<select resultType="UserDTO" id="login" parameterType="UserDTO">
	 SELECT * 
	 FROM b_user
	 WHERE U_ID=#{u_id} AND U_PASS=#{u_pass} 
 </select>

